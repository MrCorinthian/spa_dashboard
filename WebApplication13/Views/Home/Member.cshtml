                                    <td class="center">@item.Id</td>
                                    <td class="center">@item.MemberNo</td>
                                    <td class="center">@item.VipType</td>
                                    <td class="center">@item.Title</td>
                                    <td class="center">@item.FirstName</td>
                                    <td class="center">@item.FamilyName</td>
                                    <td class="center">@item.Birth</td>
                                    <td class="center">@item.AddressInTH</td>
                                    <td class="center">@item.City</td>
                                    <td class="center">@item.TelephoneNo</td>
                                    <td class="center">@item.WhatsAppId</td>
                                    <td class="center">@item.LineId</td>
                                    <td class="center">@item.VipStart</td>
                                    <td class="center">@item.VipExpire</td>
                                    <td class="center">@item.CreateDate</td>
                                    <td class="center">@item.Status</td>
                                </tr>
                                }
                            </tbody>
                        </table>
